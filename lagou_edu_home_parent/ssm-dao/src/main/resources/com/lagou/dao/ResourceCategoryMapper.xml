<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lagou.dao.ResourceCategoryMapper">
    <!--查询资源分类-->
    <select id="findAllResourceCategory" resultType="resourcecategory">
        select * from resource_category
    </select>
    <!--添加资源分类-->
    <insert id="saveResourceCategory" parameterType="resourcecategory">
        insert into resource_category values (
        null,#{name},#{sort},#{createdTime},#{updatedTime},#{createdBy},#{updatedBy}
        )
    </insert>
    <!--更新资源分类-->
    <update id="updateResourceCategory" parameterType="resourcecategory">
        update resource_category 
        <trim prefix="SET" suffixOverrides=",">
            <if test="name!=null and name!=''">
                name = #{name},
            </if>
            <if test="sort!=null">
                sort = #{sort},
            </if>
            <if test="updatedTime!=null">
                updated_time = #{updatedTime},
            </if>
            <if test="updatedBy!=null and updatedBy!=''">
                updated_by = #{updatedBy},
            </if>
        </trim>
        <where>
            <if test="id!=null">
                id = #{id}
            </if>
        </where>
    </update>
    <!--根据id删除资源分类-->
    <delete id="deleteResourceCategoryById" parameterType="int">
        delete from resource_category where id = #{id}
    </delete>

    <!--作业-->
    <!--根据角色id查询关联资源分类所有ID-->
    <select id="findResourceCategoryIdsByRoleId" parameterType="int" resultType="ResourceCategory">
        SELECT id,NAME
        FROM (
            SELECT DISTINCT r.`category_id`
            FROM resource r
            INNER JOIN role_resource_relation rr ON r.id=rr.`resource_id`
            INNER JOIN roles ro ON ro.id=rr.`role_id`
            WHERE ro.id=#{id}
        ) a
        LEFT JOIN resource_category rc
        ON a.category_id=rc.`id`;
    </select>

    <!--根据获取到了资源分类, 查询资源-->
    <select id="findResourceByResourceCategory" parameterType="int" resultType="resource">
        SELECT r.*
        FROM resource r
        INNER JOIN role_resource_relation rr ON r.id=rr.`resource_id`
        INNER JOIN roles ro ON ro.id=rr.`role_id`
        WHERE ro.id=#{arg0} AND r.category_id=#{arg1};
    </select>
    <!--根据角色id删除角色与资源中间表-->
    <delete id="deleteRoleResourceRelationByRoleId" parameterType="int">
        delete from role_resource_relation where role_id = #{roleId}
    </delete>
    <!--根据角色id与资源id集合创建角色与资源关系-->
    <insert id="RoleResourceRelation" parameterType="Role_resource_relation">
        insert into role_resource_relation values (
        null,#{resourceId},#{roleId},#{createdTime},#{updatedTime},#{createdBy},#{updatedBy}
        )
    </insert>
</mapper>

